<body>
    <h1>Calculator ðŸ–©</h1>

    <form class="operator" action="/submit" method="POST">
        <input name = "num_one" class ="num" placeholder="Enter the first number" type="number">
        <input name = "num_two" class ="num" placeholder="Enter the second number" type="number">
        <br></br>
        <label style="color:#FA7070" for="operator">Choose a operator:</label>
        <select name="operator" id="operator_id">
          <option value="+">+</option>
          <option value="-">-</option>
          <option value="*">*</option>
          <option value="%">%</option>
        </select>
        <div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>

</body>
